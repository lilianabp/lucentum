 <div class="car-box">
    <div class="car-thumbnail">
        <a href="{{ path('automovil', {'marca': automovil.marca|lower|replace({' ':''}), 'modelo': automovil.modelo|lower|replace({' ':''}), 'id': automovil.id }) }}" class="car-img">
            {% if automovil.destacado %}
                <div class="tag">Destacado</div>
            {% endif %}
            <div class="price-box">â‚¬{{ automovil.precio }}</div>
            {% if automovil.imagenDestacada %}
                <img class="d-block w-100" src="{% path automovil.imagenDestacada, 'reference' %}" alt="car">
            {% else %}
                <img class="d-block w-100" src="http://placehold.it/350x233" alt="car">
            {% endif %}
        </a>
    </div>
    <div class="detail">
        <h1 class="title">
            <a href="{{ path('automovil', {'marca': automovil.marca|lower|replace({' ':''}), 'modelo': automovil.modelo|lower|replace({' ':''}), 'id': automovil.id }) }}">{{ automovil.marca }} {{automovil.modelo}}</a>
        </h1>
        <div class="location">
            <a href="{{ path('automovil', {'marca': automovil.marca|lower|replace({' ':''}), 'modelo': automovil.modelo|lower|replace({' ':''}), 'id': automovil.id }) }}">
                <i class="flaticon-pin"></i>Ctra. de Agost, 128, 03690 San Vicente del Raspeig, Alicante
            </a>
        </div>
        <ul class="facilities-list clearfix">
            <li>
                <i class="flaticon-way"></i> {{ automovil.kilometraje }} km
            </li>
            <li>
                <i class="flaticon-manual-transmission"></i> {{ automovil.cambio }}
            </li>
            <li>
                <i class="flaticon-calendar-1"></i> {{ automovil.anio }}
            </li>
            <li>
                <i class="flaticon-fuel"></i> {{ automovil.combustible }}
            </li>
            <li>
                <i class="flaticon-car"></i> {{ automovil.color }}
            </li>
            {% if automovil.potencia %}
                <li>
                    <i class="flaticon-gear"></i> {{ automovil.potencia }}
                </li>
            {% endif %}
        </ul>
    </div>
</div>