{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
	<!-- Sub banner start -->
<div class="sub-banner" style="background: rgba(0, 0, 0, 0.04) url({% path content.banner, 'reference' %});background-size: cover;
    height: 365px;background-position: center center;background-repeat: no-repeat;position: relative;">
    <div class="container breadcrumb-area">
        <div class="breadcrumb-areas">
            <h1>Novedades</h1>
            <ul class="breadcrumbs">
                <li><a href="{{ path('novedades') }}">Noticias</a></li>
                <li class="active">Detalles</li>
            </ul>
        </div>
    </div>
</div>
<!-- Sub Banner end -->

<!-- Blog body start -->
<div class="blog-body content-area-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12">
                <!-- Blog 1 start -->
                <div class="blog-1 blog-big mb-50">
                    <div class="blog-photo">
                        {% if post.image is defined and post.image is not null %}
                            <img src="{% path post.image, 'reference' %}" alt="blog-img" class="img-fluid">
                        {% else %}
                            <img src="http://placehold.it/730x486" alt="blog-img" class="img-fluid">
                        {% endif %}
                    </div>
                    <div class="detail">
                        <h3>
                            <a href="{{ path ('post', {'title': post.title|lower|replace({' ':''}), 'id': post.id }) }}">{{ post.title }}</a>
                        </h3>
                        <p>{{ post.content|raw }}</p>
                        <br>
                        <div class="row clearfix">
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <div class="blog-tags">
                                    <span>Tags</span>
                                    {% for tag in post.tags %}
                                        <a href="#">{{ tag.name }}</a>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Heading 2 -->
                <h3 class="heading-2">Comments Section</h3>
                <!-- Comments start -->
                
                    
                
                <ul class="comments">
                    {% for comment in post.comments %}
                    <li>
                        <div class="comment">
                            <div class="comment-author">
                                <a href="#">
                                    <img src="{{ asset('assets/images/comment.png') }}" alt="comments-user">
                                </a>
                            </div>
                            <div class="comment-content">
                                <div class="comment-meta">
                                    <h6>
                                        {{ comment }}
                                        <span class="float-right">{{ comment.createdAt|date('d/m/Y') }}</span>
                                    </h6>
                                </div>
                                <p>{{ comment.message|raw }}</p>
                            </div>
                        </div>
                    </li>
                    {% endfor %}
                </ul>
                <!-- Contact 2 start -->
                <div class="contact-2 ca mb-50">
                    <h3 class="heading-2">Contact Form</h3>
                    <form action="#" method="GET" enctype="multipart/form-data">
                        <div class="row">
                            <div class="form-group name col-md-6">
                                <input type="text" name="name" class="form-control" placeholder="Name">
                            </div>
                            <div class="form-group email col-md-6">
                                <input type="email" name="email" class="form-control" placeholder="Email">
                            </div>
                            <div class="form-group number col-md-6">
                                <input type="text" name="phone" class="form-control" placeholder="Number">
                            </div>
                            <div class="form-group number col-md-6">
                                <input type="text" name="subject" class="form-control" placeholder="Subject">
                            </div>
                            <div class="form-group message col-md-12">
                                <textarea class="form-control" name="message" placeholder="Write message"></textarea>
                            </div>
                            <div class="send-btn col-md-12">
                                <button type="submit" class="btn btn-md button-theme">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 col-md-12">
                <div class="sidebar-right">
                    <!-- Search box -->
                    <div class="widget search-box">
                        <h3 class="sidebar-title">Search</h3>
                        <div class="s-border"></div>
                        <form class="form-inline form-search" method="GET">
                            <div class="form-group">
                                <label class="sr-only" for="textsearch2">Looking for something</label>
                                <input type="text" class="form-control" id="textsearch2" placeholder="Looking for something">
                            </div>
                            <button type="submit" class="btn"><i class="fa fa-search"></i></button>
                        </form>
                    </div>
                    <!-- Recent posts start -->
                    <div class="widget recent-posts">
                        <h3 class="sidebar-title">Recent Posts</h3>
                            {{ render(controller('App\\Controller\\LayoutController::getUltimosModelos')) }}
                    </div>
                    
                    <!-- Tags box Start -->
                    <div class="widget tags-box">
                        <h3 class="sidebar-title">Tags</h3>
                        <div class="s-border"></div>
                        <ul class="tags">
                            {% for tag in tags %}
                                <li><a href="{{ path('novedades', { 'tag': tag.slug }) }}">{{ tag.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog body end -->
{% endblock %}