{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block content %}

<!-- Banner start -->

<div class="banner banner_video_bg" id="banner">
    <div class="pattern-overlay">
       <a id="bgndVideo" class="player" data-property="{videoURL:'https://www.youtube.com/watch?v={{ home.video.providerReference }}',containment:'.banner_video_bg', quality:'large', autoPlay:true, mute:true, opacity:1}">bg</a>
    </div>
    <div id="bannerCarousole" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item banner-max-height active">
                <div class="carousel-caption banner-slider-inner d-flex h-100 text-center">
                    <div class="carousel-content container banner-info">
                        <div class="text-center">
                            <h3 class="text-uppercase">{{ home.title }}</h3>
                            <p>
                                {{ home.subtitle }}
                            </p>
                            {% include 'home/_search.html.twig' with {'form': searchForm} %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner end -->

<!-- Featured car start -->
<div class="featured-car content-area">
    <div class="container">
        <!-- Main title -->
        <div class="main-title">
            <h1>{{ home.tituloGridAutomoviles }}</h1>
            <p>{{ home.subtituloGridAutomoviles}}</p>
        </div>
        <div class="row">
            {% for automovil in destacados %}
            <div class="col-lg-4 col-md-6">
                <div class="car-box">
                    <div class="car-thumbnail">
                        <a href="car-details.html" class="car-img">
                            {% if automovil.destacado %}
                                <div class="tag">Destacado</div>
                            {% endif %}
                            <div class="price-box">€{{ automovil.precio }}</div>
                            {% if automovil.imagenDestacada %}
                                <img class="d-block w-100" src="{% path automovil.imagenDestacada, 'reference' %}" alt="car">
                            {% else %}
                                <img class="d-block w-100" src="http://placehold.it/350x233" alt="car">
                            {% endif %}
                        </a>
                    </div>
                    <div class="detail">
                        <h1 class="title">
                            <a href="car-grid-rightside.html">{{ automovil.marca }} {{automovil.modelo}}</a>
                        </h1>
                        <div class="location">
                            <a href="car-details.html">
                                <i class="flaticon-pin"></i>Ctra. de Agost, 128, 03690 Sant Vicent del Raspeig, Alacant
                            </a>
                        </div>
                        <ul class="facilities-list clearfix">
                            <li>
                                <i class="flaticon-way"></i> {{ automovil.kilometraje }} km
                            </li>
                            <li>
                                <i class="flaticon-manual-transmission"></i> {{ automovil.cambio }}
                            </li>
                            <li>
                                <i class="flaticon-calendar-1"></i> {{ automovil.anio }}
                            </li>
                            <li>
                                <i class="flaticon-fuel"></i> {{ automovil.combustible }}
                            </li>
                            <li>
                                <i class="flaticon-car"></i> {{ automovil.color }}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</div>
<!-- Featured car end -->

<!-- advantages start -->
<div class="advantages content-area" style="background: rgba(0, 0, 0, 0.04) url({% path home.seoBanner, 'reference' %}) top left repeat!important">
    <div class="container">
        <!-- Main title -->
        <div class="main-title-2 text-center">    
            <h1>{{ home.seoTitulo }}</h1>
            <p>{{ home.seoSubtitulo }}</p>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="advantages-box">
                    <div class="icon">
                        <i class="flaticon-shield"></i>
                    </div>
                    <div class="detail">
                        <h5>{{ home.seguridadTitle}}</h5>
                        <p>{{ home.seguridadDescripcion|raw }}</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="advantages-box">
                    <div class="icon">
                        <i class="flaticon-deal"></i>
                    </div>
                    <div class="detail">
                        <h5>{{ home.confianzaTitulo }}</h5>
                        <p>{{ home.confianzaDescripcion|raw }}</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="advantages-box">
                    <div class="icon">
                        <i class="flaticon-money"></i>
                    </div>
                    <div class="detail">
                        <h5>{{ home.ofertaTitulo }}</h5>
                        <p>{{ home.ofertaDescripcion|raw }}</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="advantages-box">
                    <div class="icon">
                        <i class="flaticon-support-2"></i>
                    </div>
                    <div class="detail">
                        <h5>{{ home.servicioTitlulo }}</h5>
                        <p>{{ home.servicioDescripcion|raw }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- advantages end -->

<!-- Latest offers Start -->
<div class="latest-offers categories content-area-13 bg-grea-3">
    <div class="container">
        <!-- Main title -->
        <div class="main-title text-center">
            <h1>{{ home.ofertasTitulo }}</h1>
            <p>{{ home.ofertasSubtitulo }}</p>
        </div>
        <div class="row row-2">

            <div class="col-lg-4 col-md-12">
                {% for automovil in ofertas %}
                    {% if loop.index == 1 or loop.index == 2 %}
                        <div class="row">
                            <div class="col-md-6 col-lg-12 col-pad">
                                <div class="category">
                                    <div class="category_bg_box" style="background: url({% path automovil.imagenDestacada, 'reference' %})">
                                        <div class="category-overlay">
                                            <div class="category-content">
                                                <h3 class="category-title">
                                                    <a href="car-list-rightside.html">{{ automovil.marca }} {{ automovil.modelo }}</a>
                                                </h3>
                                                <h5 class="category-subtitle">€{{ automovil.precio }}</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}{% endfor %}
                </div>
                {% for automovil in ofertas %}
                    {% if loop.index == 3 %}
                        <div class="col-lg-4 col-md-12 col-pad">
                            <div class="category">
                                <div class="category_bg_box category_long_bg" style="background: url({% path automovil.imagenDestacada, 'reference' %})">
                                    <div class="category-overlay">
                                        <div class="category-content">
                                            <h3 class="category-title">
                                                <a href="#">{{ automovil.marca }} {{ automovil.modelo }}</a>
                                            </h3>
                                            <h5 class="category-subtitle">€{{ automovil.precio }}</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}{% endfor %}

                    <div class="col-lg-4 col-md-12">
                        {% for automovil in ofertas %}
                            {% if loop.index == 4 or loop.index == 5 %}
                                <div class="row">
                                    <div class="col-md-6 col-lg-12 col-pad">
                                        <div class="category">
                                            <div class="category_bg_box" style="background: url({% thumbnail automovil.imagenDestacada, 'small' %})">
                                                <div class="category-overlay">
                                                    <div class="category-content">
                                                        <h3 class="category-title">
                                                            <a href="car-list-rightside.html">{{ automovil.marca }} {{ automovil.modelo }}</a>
                                                        </h3>
                                                        <h5 class="category-subtitle">€{{ automovil.precio }}</h5>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>

                </div>
            </div>
        </div>
<!-- Latest offers end -->

<!-- Testimonial start -->
<div class="testimonial bg-grea-3 content-area-5">
    <div class="container">
        <!-- Main title -->
        <div class="main-title">
            <h1>{{ home.comentariosTitulo }}</h1>
            <p>{{ home.comentariosSubtitulo }}</p>
        </div>
        <!-- Slick slider area start -->
        <div class="slick-slider-area">
            <div class="row slick-carousel" data-slick='{"slidesToShow": 2, "responsive":[{"breakpoint": 1024,"settings":{"slidesToShow": 2}}, {"breakpoint": 768,"settings":{"slidesToShow": 1}}]}'>
                {% for comentario in comentarios %}
                <div class="slick-slide-item">
                    <div class="testimonial-inner">
                        <div class="text-box">
                            <p>{{ comentario.opinion }}</p>
                            <div class="rating">
                                {% for i in 1..comentario.rating %}
                                    <i class="fa fa-star"></i>
                                {% endfor %}
                                {% if comentario.rating < 5 %}
                                    {% for i in 1..(5 - comentario.rating) %}
                                        <i class="fa fa-star-o"></i>
                                    {% endfor %}
                                {% endif %}
                                <span>( {{ comentario.opiniones }} Reviews )</span>
                            </div>
                        </div>
                        <div class="user">
                            <div class="photo">
                                {% if comentario.imagen %}
                                    <img class="media-object" src="{% path comentario.imagen, 'reference' %}" alt="user">
                                {% else %}
                                    <img class="media-object" src="http://placehold.it/50x50" alt="user">
                                {% endif %}
                            </div>
                            <div class="detail">
                                <h5>{{ comentario.nombreCompleto }}</h5>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="slick-prev slick-arrow-buton">
                <i class="fa fa-angle-left"></i>
            </div>
            <div class="slick-next slick-arrow-buton">
                <i class="fa fa-angle-right"></i>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial end -->

<!-- Blog start -->
<div class="blog content-area">
    <div class="container">
        <!-- Main title -->
        <div class="main-title">
            <h1>{{ home.noticiasTitulo }}</h1>
            <p>{{ home.noticiasSubtitulo }}</p>
        </div>
        <!-- Slick slider area start -->
        <div class="slick-slider-area clearfix">
            <div class="row slick-carousel" data-slick='{"slidesToShow": 3, "responsive":[{"breakpoint": 1024,"settings":{"slidesToShow": 2}}, {"breakpoint": 768,"settings":{"slidesToShow": 1}}]}'>
                {% for post in posts %}
                    <div class="slick-slide-item">
                        <div class="blog-1">
                            <div class="blog-photo">
                                 {% if post.image %}
                                    <img class="media-object" src="{% path post.image, 'reference' %}" alt="small-blog" class="img-fluid">
                                {% else %}
                                    <img src="http://placehold.it/350x253" alt="small-blog" class="img-fluid">
                                {% endif %}
                                <div class="date-box">
                                    <span>{{ post.publicationDateStart|date('d') }}</span>{{ post.publicationDateStart|date('M') }}
                                </div>
                            </div>
                            <div class="detail">
                                <h4>
                                    <a href="blog-details.html">{{ post.title }}</a>
                                </h4>
                                <div class="post-meta clearfix">
                                    <span><a href="#"><i class="flaticon-user-1"></i></a>{{ post.author }}</span>
                                    <span><a href="#"><i class="flaticon-comment"></i></a>{{ post.commentsCount }}</span>
                                </div>
                                <p>{{ post.abstract|raw }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="slick-prev slick-arrow-buton">
                <i class="fa fa-angle-left"></i>
            </div>
            <div class="slick-next slick-arrow-buton">
                <i class="fa fa-angle-right"></i>
            </div>
        </div>
    </div>
</div>
<!-- Blog end -->

<!-- Intro section start -->
<div class="intro-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-8 col-sm-12">
                <div class="intro-text">
                    <h3>Buscando un automóvil?</h3>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <a href="{{ path('contacto') }}" class="btn btn-md">Consúltanos</a>
            </div>
        </div>
    </div>
</div>
<!-- Intro section end -->
{% endblock %}

