{% if pageCount > 1 %}
    <nav>
        <ul class="pagination" id="paginationId">
            {% if previous is defined %}
                <li class="page-item">
                    <a class="page-link page-link-prev" rel="prev" onclick="Pagination('{{ path(route, query|merge({(pageParameterName): previous})) }}')"> <i class="fas fa-angle-left"></i> </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link page-link-prev"><i class="fas fa-angle-left"></i></a>
                </li>
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <li class="page-item">
                        <a class="page-link" onclick="Pagination('{{ path(route, query|merge({(pageParameterName): page})) }}')">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="page-item active">
                        <span class="page-link">{{ page }}</span>
                        <div class="flecha-up"></div>
                    </li>
                {% endif %}
            {% endfor %}
            {% if next is defined %}
                <li class="page-item">
                    <span class="page-link page-link-more">...</span>
                </li>
            {% endif %}

            {% if next is defined %}
                <li class="page-item">
                    <a class="page-link page-link-next" rel="next" onclick="Pagination('{{ path(route, query|merge({(pageParameterName): next})) }}')"> <i class="fas fa-angle-right"></i> </a>
                </li>
            {% else %}
                <li  class="page-item disabled">
                    <a class="page-link page-link-next"><i class="fas fa-angle-right"></i></a>
                </li>
            {% endif %}
        </ul>
    </nav>

{% endif %}
